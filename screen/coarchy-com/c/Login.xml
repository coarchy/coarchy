<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-include="false" require-authentication="anonymous-view" history="false" render-modes="qvt">

    <transition name="login" require-session-token="false"><actions><script>ec.user.loginUser(username, password)</script></actions>
        <default-response url="/coapp"/><error-response url="."/></transition>
    <transition name="logout"><actions><script>ec.user.logoutUser()</script></actions>
        <default-response url="/"/><error-response url="."/></transition>
    <transition name="resetPassword"><service-call name="org.moqui.impl.UserServices.reset#Password"/>
        <default-response url="."/></transition>
    <transition name="changePassword"><service-call name="org.moqui.impl.UserServices.update#Password" in-map="[username:username,oldPassword:oldPassword,newPassword:newPassword,newPasswordVerify:newPassword]"/>
        <default-response url="/coapp"/><error-response url="." save-current-screen="true" save-parameters="true"/></transition>
    <transition name="createInitialAdminAccount"><service-call name="org.moqui.impl.UserServices.create#InitialAdminAccount"/>
        <default-response url="../Login"/><error-response url="."/></transition>
    <transition name="createAccount" require-session-token="false">
        <actions>
            <service-call name="mantle.party.PartyServices.create#Account" out-map="context"
                    in-map="[emailAddress:emailAddress,firstName:firstName,lastName:lastName,username:emailAddress,newPassword:newPassword,newPasswordVerify:newPassword]"/>
            <service-call name="create#moqui.security.UserGroupMember" in-map="[userGroupId:'COARCHY_USERS', userId:userId, fromDate:ec.user.nowTimestamp]"/>

            <service-call name="create#mantle.party.Party" in-map="[ownerPartyId:partyId,partyTypeEnumId:'PtyOrganization']" out-map="organization"/>
            <service-call name="create#mantle.party.Organization" in-map="[partyId:organization.partyId,organizationName:organizationName]"/>
            <service-call name="create#mantle.party.PartyRelationship" in-map="[relationshipTypeEnumId:'PrtMember',fromPartyId:partyId,toRoleTypeId:'OrgInternal',toPartyId:organization.partyId]"/>
            <service-call name="org.moqui.impl.UserServices.set#Preference" in-map="[preferenceKey:'ACTIVE_ORGANIZATION',preferenceValue:organization.partyId]"/>
        </actions>
        <default-response url="." parameter-map="[initialTab:'#sign-up']"/>
    </transition>

    <pre-actions><script>
        // if user already logged in redirect to application
//        if (ec.user.userId) sri.sendRedirectAndStopRender('/coapp')
    </script></pre-actions>
    <widgets>




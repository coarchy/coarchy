<entity-facade-xml type="seed">

    <!-- ========== User Groups ========== -->
    <!-- NOTE: see SimpleScreensSetupData.xml for Artifact Groups for parts of SimpleScreens -->
    <moqui.basic.Enumeration description="Coarchy App" enumId="UgtCoarchyApp" enumTypeId="UserGroupType"/>
    <userGroups userGroupId="COARCHY_USERS" description="Coarchy Users" groupTypeEnumId="UgtCoarchyApp"/>

    <!-- TODO: Add a filter for organizations so that owners can only see parties and relationships of the organizations they own. -->
    <moqui.security.EntityFilterSet entityFilterSetId="COARCHY_FILTER">
        <filters entityFilterId="COARCHY_FILTER_C1" entityName="coarchy.Activity" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C2" entityName="coarchy.Actor" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C3" entityName="coarchy.ProcessStory" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C4" entityName="coarchy.ActivityActor" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C5" entityName="coarchy.ProcessStoryActivity" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C6" entityName="coarchy.ValueStatement" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C7" entityName="coarchy.ValueStatementActivity" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C8" entityName="mantle.work.effort.WorkEffort" filterMap="[ownerPartyId:activeOrgId]"/>
    </moqui.security.EntityFilterSet>

    <!-- Artifact group and authz for Coarchy Apps -->
    <artifactGroups artifactGroupId="COARCHY" description="Coarchy App (via root screen)">
        <artifacts artifactName="component://coarchy/screen/coarchy/cointernal.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
        <artifacts artifactName="org.moqui.impl.UserServices.set#Preference" artifactTypeEnumId="AT_SERVICE" inheritAuthz="N" nameIsPattern="N"/>
        <authz artifactAuthzId="COARCHY_USERS" userGroupId="COARCHY_USERS" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL">
            <filters entityFilterSetId="COARCHY_FILTER"/></authz>
        <authz artifactAuthzId="COARCHY_ADMIN" userGroupId="ADMIN" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL">
            <filters entityFilterSetId="COARCHY_FILTER"/></authz>
    </artifactGroups>

    <artifactGroups artifactGroupId="COARCHY_COM" description="Coarchy.com (via root screen)">
        <artifacts artifactName="component://coarchy/screen/coarchy-com/c.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
        <artifacts artifactName="org.moqui.impl.UserServices.set#Preference" artifactTypeEnumId="AT_SERVICE" inheritAuthz="N" nameIsPattern="N"/>
        <authz artifactAuthzId="COARCHY_COM_USERS" userGroupId="COARCHY_USERS" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="COARCHY_COM_ADMIN" userGroupId="ADMIN" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
    </artifactGroups>

    <artifactGroups artifactGroupId="COARCHY_SETTINGS" description="Coarchy Settings (via root screen)">
        <artifacts artifactName="component://coarchy/screen/settings/settingsinternal.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
        <artifacts artifactName="coarchy.StripeServices.create#PaymentIntent" artifactTypeEnumId="AT_SERVICE" inheritAuthz="Y" nameIsPattern="N"/>
        <artifacts artifactName="mantle.party.Party" artifactTypeEnumId="AT_ENTITY" inheritAuthz="N" nameIsPattern="N"/>
        <artifacts artifactName="mantle.party.Organization" artifactTypeEnumId="AT_ENTITY" inheritAuthz="N" nameIsPattern="N"/>
        <artifacts artifactName="mantle.order.OrderHeaderAndPart" artifactTypeEnumId="AT_ENTITY" inheritAuthz="N" nameIsPattern="N"/>
        <artifacts artifactName="mantle.order.OrderServices.add#OrderPartPayment" artifactTypeEnumId="AT_SERVICE" inheritAuthz="Y" nameIsPattern="N"/>
        <authz artifactAuthzId="COARCHY_SETTINGS_USERS" userGroupId="COARCHY_USERS" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="COARCHY_SETTINGS_ADMIN" userGroupId="ADMIN" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
    </artifactGroups>

    <!-- Theme Resources -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT_QUASAR" sequenceNum="130" resourceTypeEnumId="STRT_HEADER_NAVBAR_COMP"
            resourceValue="/costatic/lib/ActiveOrgNav.qvue"/>

    <!-- EmailTemplates and Notifications -->
    <moqui.basic.email.EmailTemplate emailTemplateId="USER_INVITE_RESET_PASSWORD" description="User Invite with Reset Password" emailServerId="SYSTEM"
            emailTypeEnumId="EMT_PWD_RESET" bodyScreenLocation="component://coarchy/screen/coarchy/UserInviteResetPasswordEmail.xml" webappName="webroot"
            fromAddress="noreply@coarchy.com" fromName="Coarchy" ccAddresses="" bccAddresses="" subject="${title}" sendPartial="Y"/>
    <moqui.basic.email.EmailTemplate emailTemplateId="USER_INVITE" description="User Invite" emailServerId="SYSTEM"
            emailTypeEnumId="EMT_NOTIFICATION" bodyScreenLocation="component://coarchy/screen/coarchy/UserInviteEmail.xml" webappName="webroot"
            fromAddress="noreply@coarchy.com" fromName="Coarchy" ccAddresses="" bccAddresses="" subject="${title}" sendPartial="Y"/>

    <moqui.basic.email.EmailTemplate emailTemplateId="TASK_ASSIGNED_NOTIFICATION" description="Task Assigned Notification" emailServerId="SYSTEM"
            emailTypeEnumId="EMT_NOTIFICATION" bodyScreenLocation="component://coarchy/screen/coarchy/TaskAssignedNotificationEmail.xml" webappName="webroot"
            fromAddress="noreply@coarchy.com" fromName="Coarchy" ccAddresses="" bccAddresses="" subject="${title}" sendPartial="Y"/>
<!--    <moqui.security.user.NotificationTopic topic="CoarchyTaskReminder" description="Coarchy Task Reminder"-->
<!--            typeString="info" showAlert="Y" persistOnSend="N" receiveNotifications="Y" emailTemplateId="TASK_ASSIGNED_NOTIFICATION"-->
<!--            linkTemplate="/coapp/Checklist?checklistId=${workEffortId}&amp;canViewProjectPositions=true" emailMessageSave="Y"/>-->
    <moqui.basic.email.EmailTemplate emailTemplateId="TASK_NEEDS_ASSIGNMENT_NOTIFICATION" description="Task Needs Assignment Notification" emailServerId="SYSTEM"
            emailTypeEnumId="EMT_NOTIFICATION" bodyScreenLocation="component://coarchy/screen/coarchy/TaskNeedsAssignmentNotificationEmail.xml" webappName="webroot"
            fromAddress="noreply@coarchy.com" fromName="Coarchy" ccAddresses="" bccAddresses="" subject="${title}" sendPartial="Y"/>
    <!--    <moqui.security.user.NotificationTopic topic="CoarchyTaskReminder" description="Coarchy Task Reminder"-->
    <!--            typeString="info" showAlert="Y" persistOnSend="N" receiveNotifications="Y" emailTemplateId="TASK_ASSIGNED_NOTIFICATION"-->
    <!--            linkTemplate="/coapp/Checklist?checklistId=${workEffortId}&amp;canViewProjectPositions=true" emailMessageSave="Y"/>-->
    <moqui.basic.email.EmailTemplate emailTemplateId="TASK_NOTIFICATION" description="Task Notification" emailServerId="SYSTEM"
            emailTypeEnumId="EMT_NOTIFICATION" bodyScreenLocation="component://coarchy/screen/coarchy/TaskNotificationEmail.xml" webappName="webroot"
            fromAddress="noreply@coarchy.com" fromName="Coarchy" ccAddresses="" bccAddresses="" subject="${title}" sendPartial="Y"/>
    <!--    <moqui.security.user.NotificationTopic topic="CoarchyTaskReminder" description="Coarchy Task Reminder"-->
    <!--            typeString="info" showAlert="Y" persistOnSend="N" receiveNotifications="Y" emailTemplateId="TASK_ASSIGNED_NOTIFICATION"-->
    <!--            linkTemplate="/coapp/Checklist?checklistId=${workEffortId}&amp;canViewProjectPositions=true" emailMessageSave="Y"/>-->

    <!-- Data Documents -->
    <dataDocuments dataDocumentId="MantleParty">
        <fields fieldSeqId="100" fieldPath="lastUpdatedStamp"/>
    </dataDocuments>

    <dataDocuments dataDocumentId="MantleProcessStory" indexName="mantle" documentName="Process Story"
            primaryEntityName="coarchy.ProcessStory" documentTitle="${organizationId}:${processStoryId}">
        <fields fieldSeqId="01" fieldPath="processStoryId"/>
        <fields fieldSeqId="02" fieldPath="name"/>

        <fields fieldSeqId="10" fieldPath="organizationId"/>

        <fields fieldSeqId="100" fieldPath="lastUpdatedStamp"/>
    </dataDocuments>

    <dataDocuments dataDocumentId="MantleActor" indexName="mantle" documentName="Actor"
            primaryEntityName="coarchy.Actor" documentTitle="${organizationId}:${actorId}">
        <fields fieldSeqId="01" fieldPath="actorId"/>
        <fields fieldSeqId="02" fieldPath="name"/>
        <fields fieldSeqId="03" fieldPath="description"/>

        <fields fieldSeqId="10" fieldPath="organizationId"/>

        <fields fieldSeqId="100" fieldPath="lastUpdatedStamp"/>
    </dataDocuments>

    <dataDocuments dataDocumentId="MantleActivity" indexName="mantle" documentName="Activity"
            primaryEntityName="coarchy.Activity" documentTitle="${organizationId}:${activityId}">
        <fields fieldSeqId="01" fieldPath="activityId"/>
        <fields fieldSeqId="02" fieldPath="condition"/>
        <fields fieldSeqId="03" fieldPath="action"/>

        <fields fieldSeqId="10" fieldPath="organizationId"/>

        <fields fieldSeqId="100" fieldPath="lastUpdatedStamp"/>
    </dataDocuments>

    <!-- ================ -->
    <!-- Search Data Feed -->
    <moqui.entity.feed.DataFeed dataFeedId="MantleSearch">
        <documents dataDocumentId="MantleProcessStory"/>
        <documents dataDocumentId="MantleActor"/>
        <documents dataDocumentId="MantleActivity"/>
    </moqui.entity.feed.DataFeed>

    <!-- ========== Enums ========== -->
    <!-- Work Effort Resolution -->
    <moqui.basic.Enumeration description="Condition not met" enumId="WerNotCondition" enumTypeId="WorkEffortResolution"/>
    <!-- Work Effort Resolution Group -->
    <moqui.basic.Enumeration description="Checklist Resolution" enumId="EngTaskResolution" enumTypeId="EnumGroup"/>
    <moqui.basic.EnumGroupMember enumId="WerCompleted" enumGroupEnumId="EngTaskResolution" sequenceNum="01"/>
    <moqui.basic.EnumGroupMember enumId="WerNotCondition" enumGroupEnumId="EngTaskResolution" sequenceNum="02"/>
    <moqui.basic.EnumGroupMember enumId="WerWontComplete" enumGroupEnumId="EngTaskResolution" sequenceNum="03"/>
    <moqui.basic.EnumGroupMember enumId="WerInsufficient" enumGroupEnumId="EngTaskResolution" sequenceNum="04"/>

    <!-- Vision Story -->
    <moqui.basic.Enumeration description="Origin Story"  enumId="PcntOriginStory" enumTypeId="PartyContentType"/>
    <moqui.basic.Enumeration description="Mission"  enumId="PcntMission" enumTypeId="PartyContentType"/>
    <moqui.basic.Enumeration description="Vision"  enumId="PcntVision" enumTypeId="PartyContentType"/>

    <!-- ========== Moqui Cleanup ========== -->
    <moqui.security.user.NotificationTopic topic="MantleTask" showAlert="N" persistOnSend="N" receiveNotifications="N"/>

    <!-- ========== Stripe ========== -->
    <moqui.basic.Enumeration description="Stripe" enumId="PmtStripe" enumTypeId="PaymentMethodType"/>
    <moqui.basic.Enumeration description="Stripe" enumId="PiStripe" enumTypeId="PaymentInstrument" relatedEnumId="PmtStripe"/>

    <moqui.service.message.SystemMessageType systemMessageTypeId="StripeWebhookEvent" consumeServiceName="coarchy.StripeServices.consume#StripeWebhookEvent" description="Stripe Webhook Event"/>
    <moqui.service.message.SystemMessageRemote systemMessageRemoteId="DemoStripe" authHeaderName="Stripe-Signature" messageAuthEnumId="SmatHmacSha256Timestamp" description="Stripe Demo"/>
    <moqui.basic.Enumeration description="Stripe" enumId="PgtStripe" enumTypeId="PaymentGatewayType"/>
    <mantle.account.method.PaymentGatewayConfig paymentGatewayConfigId="DemoStripe" paymentGatewayTypeEnumId="PgtStripe" description="Stripe Demo Payment Gateway" systemMessageRemoteId="DemoStripe"/>

    <!-- ========== Products and Other Related ========== -->
    <parties pseudoId="coarchy" partyTypeEnumId="PtyOrganization" disabled="N" partyId="coarchy" visibilityEnumId="PvPublic"/>
    <mantle.party.Organization organizationName="Coarchy" partyId="coarchy"/>

    <productStores defaultSalesChannelEnumId="ScWeb" storeName="Coarchy" productStoreId="coarchy" systemMessageRemoteId="DemoStripe" organizationPartyId="coarchy">
        <mantle.product.store.ProductStorePaymentGateway paymentInstrumentEnumId="PiStripe" paymentGatewayConfigId="DemoStripe"/>
    </productStores>

    <products productId="c100000" productName="Organization-Month Credits" pseudoId="ORGMNTH" productTypeEnumId="PtDigitalAsset">
        <description><![CDATA[Buy monthly usage of Coarchy premium features for you organization. Each organization-month credit allows premium features for one organization for one month.\n\nIf you want to have 5 organizations for 12 months then you would buy 60 organizaiton-month credits.]]></description>
        <prices productPriceId="c100000" priceTypeEnumId="PptCurrent" minQuantity="1" price="100.00" pricePurposeEnumId="PppPurchase" fromDate="1696309200000" priceUomId="USD"/>
        <prices productPriceId="c100001" priceTypeEnumId="PptCurrent" minQuantity="3" price="95.00" pricePurposeEnumId="PppPurchase" fromDate="1696309200001" priceUomId="USD"/>
        <prices productPriceId="c100002" priceTypeEnumId="PptCurrent" minQuantity="12" price="90.00" pricePurposeEnumId="PppPurchase" fromDate="1696309200002" priceUomId="USD"/>
        <prices productPriceId="c100003" priceTypeEnumId="PptCurrent" minQuantity="120" price="80.00" pricePurposeEnumId="PppPurchase" fromDate="1696309200003" priceUomId="USD"/>
        <mantle.product.store.ProductStoreProduct productStoreId="coarchy"/>
    </products>

    <mantle.account.financial.FinancialAccountType description="Organization-Month Credit" finAccountTypeId="OrganizationMonthCredit"
            replenishTypeEnumId="FarpManual" isRefundable="Y" parentTypeId="DepositAccount"/>

    <!-- ========== Service Jobs ========== -->
    <moqui.service.job.ServiceJob jobName="withdraw_FinancialAccountCredits" description="Withdraw Financial Account Credits Monthly"
            serviceName="coarchy.CoarchyServices.withdraw#FinancialAccountCreditsMonthly" cronExpression="0 0 2 1 * ?" paused="N"
            transactionTimeout="3600">
        <parameters parameterName="finAccountTypeId" parameterValue="OrganizationMonthCredit"/>
    </moqui.service.job.ServiceJob>
    <moqui.service.job.ServiceJob jobName="check_PartyActivation" description="Check Party Activation Daily"
            serviceName="coarchy.CoarchyServices.check#PartyActivationDaily" cronExpression="0 30 2 * * ?" paused="N"
            transactionTimeout="3600">
        <parameters parameterName="finAccountTypeId" parameterValue="OrganizationMonthCredit"/>
    </moqui.service.job.ServiceJob>
</entity-facade-xml>

<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="false">
    <pre-actions>
        <set field="head_keywords" value="coarchy"/>
        <set field="head_title" value="Coarchy"/>
        <set field="head_description" value="Coarchy"/>
        <set field="menu_active" value="home"/>
    </pre-actions>

    <widgets>
        <render-mode>
            <text type="html"><![CDATA[
                <div class="q-pa-md">
                    <q-card class="my-card">
                        <q-parallax
                                src="/mstatic/background.jpg"
                                :height="500"
                        />

                        <q-card-section>
                            <div class="text-h1 text-white">Coarchy</div>
                        </q-card-section>
                    </q-card>
                </div>

                <div class="q-ma-md">
                    Fork and make your own!
                    Do NOT use self-closing tags here on Codepen.
                </div>

                <div class="q-ma-md">
                    <q-btn label="Notify" color="primary" @click="notify"></q-btn>
                </div>

                <div class="q-ma-md">
                    Running Quasar v{{ version }}
                </div>
                ]]></text>
        </render-mode>
    </widgets>
</screen>

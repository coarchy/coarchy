            <p class="text-inline text-muted text-center">Enter your username and password to sign in</p>
            <!-- BEGIN form-single[@name=Login] -->
            <div class="q-my-md"><m-form name="Login" id="Login" action="/Login/login"
                                         v-slot:default="formProps" :fields-initial="{'moquiFormName':'Login','username':''}">

                <div class="q-ma-sm">

                    <m-text-line dense outlined stack-label label="Username" id="Login_username" type="text" name="username" v-model="formProps.fields.username" :fields="formProps.fields" style="width:100%;" class=""

                    ></m-text-line>
                </div>

                <div class="q-ma-sm">

                    <q-input dense outlined stack-label label="Password" type="password" name="password" id="Login_password" v-model="formProps.fields.password" class="form-control" size="25">
                    </q-input>
                </div>

                <div class="q-ma-sm">

                    <q-btn dense outline no-caps type="submit" name="submit" value="submit" id="Login_submit" color="primary" label="Submit">

                    </q-btn>
                </div>
            </m-form></div

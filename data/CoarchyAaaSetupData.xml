<entity-facade-xml type="seed">

    <!-- ========== User Groups ========== -->
    <!-- NOTE: see SimpleScreensSetupData.xml for Artifact Groups for parts of SimpleScreens -->
    <moqui.basic.Enumeration description="Coarchy App" enumId="UgtCoarchyApp" enumTypeId="UserGroupType"/>
    <userGroups userGroupId="COARCHY_USERS" description="Coarchy Users" groupTypeEnumId="UgtCoarchyApp"/>

    <!-- TODO: Add a filter for organizations so that owners can only see parties and relationships of the organizations they own. -->
    <moqui.security.EntityFilterSet entityFilterSetId="COARCHY_FILTER">
        <filters entityFilterId="COARCHY_FILTER_C1" entityName="coarchy.Activity" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C2" entityName="coarchy.Actor" filterMap="[organizationId:activeOrgId]"/>
        <filters entityFilterId="COARCHY_FILTER_C3" entityName="coarchy.ProcessStory" filterMap="[organizationId:activeOrgId]"/>
    </moqui.security.EntityFilterSet>

    <!-- Artifact group and authz for Coarchy Apps -->
    <artifactGroups artifactGroupId="COARCHY" description="Coarchy App (via root screen)">
        <artifacts artifactName="component://coarchy/screen/coarchy/cointernal.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
        <artifacts artifactName="org.moqui.impl.UserServices.set#Preference" artifactTypeEnumId="AT_SERVICE" inheritAuthz="N" nameIsPattern="N"/>
        <authz artifactAuthzId="COARCHY_USERS" userGroupId="COARCHY_USERS" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL">
            <filters entityFilterSetId="COARCHY_FILTER"/></authz>
        <authz artifactAuthzId="COARCHY_ADMIN" userGroupId="ADMIN" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL">
            <filters entityFilterSetId="COARCHY_FILTER"/></authz>
    </artifactGroups>

<!--    <artifactGroups artifactGroupId="COARCHY_COM" description="Coarchy.com">-->
<!--        <artifacts artifactName="component://coarchy/screen/coarchy-com/minternal.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>-->
<!--        <authz artifactAuthzId="COARCHY_COM_USERS" userGroupId="COARCHY_USERS" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>-->
<!--    </artifactGroups>-->

    <!-- Theme Resources -->
    <moqui.screen.ScreenThemeResource screenThemeId="DEFAULT_QUASAR" sequenceNum="130" resourceTypeEnumId="STRT_HEADER_NAVBAR_COMP"
            resourceValue="/costatic/lib/ActiveOrgNav.qvue"/>

    <!-- EmailTemplate for User Invite -->
    <moqui.basic.email.EmailTemplate emailTemplateId="USER_INVITE" description="User Invite" emailServerId="SYSTEM"
            emailTypeEnumId="EMT_PWD_RESET" bodyScreenLocation="component://coarchy/screen/UserInviteEmail.xml" webappName="webroot"
            fromAddress="noreply@coarchy.com" fromName="Coarchy" ccAddresses="" bccAddresses="" subject="${title}" sendPartial="Y"/>

</entity-facade-xml>
